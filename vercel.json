{
  "version": 2,
  "builds": [
    { "src": "api/scrape.js", "use": "@vercel/node" },
    { "src": "src/**/*", "use": "@vercel/node" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/scrape", "dest": "/api/scrape.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
